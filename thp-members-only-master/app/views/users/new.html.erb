<h1>Sign up form</h1>

<%= form_for(@user) do |f| %>
      
  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label :email %>
  <%= f.email_field :email %>
  </p>

  <p>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </p>

  <p>
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
  </p>

  <%= f.submit "Sign up" %>
<% end %>
